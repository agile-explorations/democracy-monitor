# Comma-separated allowlist for proxy hosts (optional; falls back to lib/allowedHosts.ts)
ALLOWED_PROXY_HOSTS=www.gao.gov,www.defense.gov,oig.ssa.gov,freedomhouse.org,www.oversight.gov,www.reginfo.gov,www.supremecourt.gov,www.federalregister.gov
# Cache TTL in seconds for proxy responses
PROXY_CACHE_TTL=600

# PostgreSQL connection string (required for persistence features)
DATABASE_URL=postgresql://user:password@localhost:5432/epd

# Redis connection string (optional; falls back to in-memory cache)
REDIS_URL=redis://localhost:6379

# AI provider API keys (optional; enables AI-enhanced assessment)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Demo mode (optional; serves fixture data with zero external calls)
DEMO_MODE=false
DEMO_SCENARIO=mixed
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_DEMO_SCENARIO=mixed
